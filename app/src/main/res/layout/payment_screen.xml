<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skypunch.householdsolutions.PaymentScreen"
    android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Card Holder's name "
            android:layout_marginBottom="20dp"
            android:id="@+id/holderNameET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Card Number "
            android:layout_marginBottom="20dp"
            android:id="@+id/cardNumET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter CVV "
            android:layout_marginBottom="20dp"
            android:id="@+id/CVVET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Expiry date"
            android:layout_marginBottom="20dp"
            android:id="@+id/expiryDateET" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:id="@+id/paymentBtn" />
</LinearLayout>
